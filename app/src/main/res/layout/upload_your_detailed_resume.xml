<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fillViewport="true" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:gravity="center_horizontal" android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="5dp" android:textColor="@color/dark_grey" android:text="@string/upload_your_detail_resume" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" android:background="@color/dark_grey"></View>
        <TextView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content" android:textColor="@color/colorPrimary"
            android:text="Upload your Resume Document :"/>

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/image_document"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:layout_width="80dp"
            android:src="@drawable/ic_file_upload_white_24dp"
            android:layout_height="80dp" android:background="@drawable/circle_greycolor"/>

    </LinearLayout>

</ScrollView>