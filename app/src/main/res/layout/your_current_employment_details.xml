<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content" android:textStyle="bold"  android:textColor="@color/dark_grey" android:text="@string/title_your_contact_information" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" android:background="@color/dark_grey"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content" android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textColor="@color/colorPrimary"
                android:text="@string/how_much_work_experience_do_you_have"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center_vertical" android:orientation="horizontal">
                    <EditText
                        android:id="@+id/edit_years"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:editable="false"
                        android:focusable="false"
                        android:singleLine="true"
                        android:drawableRight="@drawable/ic_keyboard_arrow_down_black_18dp"
                        android:text="0"  android:paddingRight="10dp"/>
                    <EditText
                        android:id="@+id/edit_months"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:editable="false"
                        android:focusable="false"
                        android:singleLine="true"
                        android:drawableRight="@drawable/ic_keyboard_arrow_down_black_18dp"
                        android:text="0"  android:paddingRight="10dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textColor="@color/colorPrimary"
                android:text="@string/annual_salary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center_vertical" android:orientation="horizontal">
                    <EditText
                        android:id="@+id/edit_salary_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:editable="false"
                        android:focusable="false"
                        android:singleLine="true"
                        android:drawableRight="@drawable/ic_keyboard_arrow_down_black_18dp"
                        android:text="0"  android:paddingRight="10dp"/>
                    <EditText
                        android:id="@+id/edit_salary_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:editable="false"
                        android:focusable="false"
                        android:singleLine="true"
                        android:drawableRight="@drawable/ic_keyboard_arrow_down_black_18dp"
                        android:text="0"  android:paddingRight="10dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textColor="@color/colorPrimary"
                android:text="@string/enter_a_headline_for_your_profile"/>

            <EditText
                    android:id="@+id/edit_enter_a_headline_for_your_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:inputType="textPersonName"
                    />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textColor="@color/colorPrimary"
                android:text="@string/what_are_you_key_skills"/>
                <EditText
                    android:id="@+id/edit_what_are_you_key_skills"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                     />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textColor="@color/colorPrimary"
                android:text="@string/select_the_industry_and_functional_are_that_are_interest_in"/>
            <EditText
                    android:id="@+id/edit_select_the_industry_and_functional_are_that_are_interest_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down_black_18dp"
                    android:paddingRight="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textColor="@color/colorPrimary"
                android:text="@string/which_functional_area_do_you_work_in"/>
                <EditText
                    android:id="@+id/edit_which_functional_area_do_you_work_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down_black_18dp"
                    android:paddingRight="10dp"/>

        </LinearLayout>
        <TextView
            android:padding="5dp"
            android:id="@+id/header_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textStyle="bold" android:textColor="@color/dark_grey" android:text="@string/your_education_background" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" android:background="@color/dark_grey"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_margin="10dp" android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textColor="@color/colorPrimary"
                android:text="@string/please_select_your_basic_education"/>
                <EditText
                    android:id="@+id/edit_please_select_your_basic_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down_black_18dp"
                    android:paddingRight="10dp"/>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/input_please_select_your_basic_education_other">
                <EditText
                    android:id="@+id/edit_please_select_your_basic_education_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:paddingRight="10dp"/>
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textColor="@color/colorPrimary"
                android:text="@string/please_select_your_master_education"/>
                <EditText
                    android:id="@+id/edit_please_select_your_master_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down_black_18dp"
                    android:paddingRight="10dp"/>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/input_please_select_your_master_education_other">
            <EditText
                    android:id="@+id/edit_please_select_your_master_education_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:paddingRight="10dp"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textColor="@color/colorPrimary"
                android:text="@string/please_select_your_doctorate_education"/>
                <EditText
                    android:id="@+id/edit_please_select_your_doctorate_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down_black_18dp"
                    android:paddingRight="10dp"/>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/input_please_select_your_doctorate_education_other">

            <EditText
                    android:id="@+id/edit_please_select_your_doctorate_education_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:paddingRight="10dp"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textColor="@color/colorPrimary"
                android:text="@string/enter_the_certificate_course_name"/>
                <EditText
                    android:id="@+id/edit_enter_the_certificate"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:inputType="textPersonName" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>