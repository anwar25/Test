<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fillViewport="true" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:gravity="center_horizontal" android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="5dp" android:textColor="@color/dark_grey" android:text="@string/upload_your_detail_resume" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" android:background="@color/dark_grey"></View>
        <TextView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content" android:textColor="@color/colorPrimary"
            android:text="Upload your Resume Document :"/>

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/image_document"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:layout_width="80dp"
            android:src="@drawable/ic_file_upload_white_24dp"
            android:layout_height="80dp" android:background="@drawable/circle_greycolor"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="5dp" android:textColor="@color/dark_grey" android:text="@string/mailer_and_privacy_settings" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" android:background="@color/dark_grey"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/checkbox_job_alerts"
                android:layout_height="wrap_content" android:textColor="@color/dark_grey" android:text="@string/job_alerts"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/checkbox_imp_notification"
                android:layout_height="wrap_content" android:textColor="@color/dark_grey" android:text="@string/important_notifications"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/checkbox_fastforword_emails"
                android:layout_height="wrap_content" android:textColor="@color/dark_grey" android:text="@string/fast_forward_e_mails"/>
            <CheckBox
                android:id="@+id/checkbox_communication_clients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="@color/dark_grey" android:text="@string/communication_from_clients"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/checkbox_fastforword_calls"
                android:layout_height="wrap_content" android:textColor="@color/dark_grey" android:text="@string/fast_forward_call_sms"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/checkbox_other_promotions"
                android:layout_height="wrap_content" android:textColor="@color/dark_grey" android:text="@string/other_promotions_offers"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:gravity="center">
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/checkbox_I_have_read_and_understood_and_agree"
                android:layout_height="wrap_content" android:textColor="@color/dark_grey" android:text="@string/i_have_read_and_understood_and_agree"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>